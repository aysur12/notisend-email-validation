mixin primary-button(params = {})
  -
    const {
      buttonText= "",
      buttonLink= "",
      forPromo= false,
      forBenefits= false,
    } = params;

    const primaryButtonForPromo = forPromo ? "primary-button_for_promo": "";
    const primaryButtonForBenefits = forBenefits ? "primary-button_for_benefits": "";

  a.primary-button(
    class= `${primaryButtonForPromo}${primaryButtonForBenefits}`
    href= buttonLink
    )= buttonText
